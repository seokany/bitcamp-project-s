   <select id="countAll" resultType="int">
    select 
      count(*)
    from video v
      left outer join contents c on v.cono=c.cono
  </select>
  
  <select id="getList" resultMap="video-map" parameterType="map">
    select 
      c.cono, 
      v.kotl, 
      v.entl, 
      v.voimg, 
      v.vodsc, 
      v.spnm, 
      v.sjob, 
      v.simg
    from video v
      left outer join contents c on v.cono=c.cono
    order by c.cono
<!--     limit #{startRowIndex}, #{rowSize} -->
  </select>
  
